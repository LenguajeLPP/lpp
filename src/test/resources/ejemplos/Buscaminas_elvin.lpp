		mx<-(aleatorio() * 8) + 2
		my<-(aleatorio() * 8) + 2
		Si minas[mx,my] <> -1 Entonces
			minas[mx,my] <- -1
			i<-i+1
		Fin  Si
	Fin Mientras
	
	
	Para i <-2 Hasta 10 haga
		Para n <-2 Hasta 10 haga
			Si minas[i,n] <> -1 Entonces
				Para j<-i-1 Hasta i+1 haga
					Para m<-n-1 Hasta n+1 haga
						Si minas[j,m] = -1 Entonces
							minas[i,n] <- minas[i,n] + minas[j,m]*-1
						Fin Si
					Fin Para
				Fin Para 
			Fin Si
		Fin Para
