	Para i <- 1 Hasta 11 haga
		minas[1,i]  <- -2
		minas[i,1]	<- -2
		minas[11,i] <- -2
    	minas[i,11]	<- -2
	Fin Para
	
	Para i<-2 Hasta 10 haga
		Para n<-2 Hasta 10 haga
			minas[i, n] <- 0
